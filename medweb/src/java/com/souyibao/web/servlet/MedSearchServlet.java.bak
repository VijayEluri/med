	public void searchGoogle(HttpServletRequest req, String queryStr) {
		HttpClient client = new HttpClient();
		client.getParams().setParameter("http.protocol.version",
				HttpVersion.HTTP_1_1);
		client.getParams().setParameter("http.protocol.content-charset",
				"UTF-8");

		HostConfiguration config = new HostConfiguration();
		config.setHost("www.google.cn");
		client.setHostConfiguration(config);

		GetMethod getMethod = new GetMethod("/search");

		NameValuePair v1 = new NameValuePair("q", queryStr);
		NameValuePair v2 = new NameValuePair("hl", "zh-CN");

		getMethod.setQueryString(new NameValuePair[] { v1, v2 });

		try {
			client.executeMethod(getMethod);
			System.out.println("path is : " + getMethod.getPath());
			String result = getMethod.getResponseBodyAsString();
			getMethod.releaseConnection();

			req.setAttribute("qresult", result);
		} catch (HttpException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}

