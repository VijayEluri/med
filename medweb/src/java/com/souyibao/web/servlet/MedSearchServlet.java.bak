	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp)
			throws ServletException, IOException {

		req.setCharacterEncoding("UTF-8");
		
		// query String
		String queryString = req.getParameter("q");
		if (queryString == null) {
			queryString = "";
		}
		
		// get the category filter
		Map<String, String> cateFilterMap = MedWebUtil.getCategoryFilter(req.getParameterMap());		
		System.out.println("the query string is : : " + queryString);

		Map<String, List<KeywordWeight>> searchResult = Controller
				.getSearchResult(queryString, cateFilterMap);

		req.setAttribute("topicsAttribute", searchResult);

		// try to get the start page
		int startNumber = 0;
		String startParameter = req.getParameter("start");
		if (startParameter != null) {
			try {
				startNumber = Integer.parseInt(startParameter);
			} catch (Exception e) {
				startNumber = 0;
			}
		}

		// web search
		// TODO : need to set the right parameters and site type
		SearchResult result = WebSearcherManager.search(queryString,
				startNumber, null, null);
		req.setAttribute("webSearchResult", result);

		// the search result will be forwarded to search.jsp		
		RequestDispatcher rd = getServletContext().getRequestDispatcher(
				"/search.jsp");
		rd.forward(req, resp);
	}

	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp)
			throws ServletException, IOException {
		doPost(req, resp);
	}

	/**
